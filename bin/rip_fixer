#!/usr/bin/env ruby
# frozen_string_literal: true

require File.expand_path('../lib/plex_ripper', __dir__).to_s

Signal.trap('INT') do
  Logger.info("\nGood Bye")
  exit 1
end

begin
  OptParser.parse(ARGV)
  Logger.debug(Config.configuration.inspect)
  Ripper.fixer
rescue Interrupt, TTY::Reader::InputInterrupt
  Logger.info("\nGood Bye")
  exit 1
end
