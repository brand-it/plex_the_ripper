<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">State</th>
      <th scope="col">Message</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |id, job| %>
      <tr>
        <th scope="row"><%= id %></th>
        <td><%= job.status %></td>
        <td><%= job.exception&.message %></td>
        <td><%= link_to 'details', job_path(id), class: 'btn btn-secondary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
