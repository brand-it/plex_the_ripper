<%= turbo_frame_tag 'videos', class: 'row' do %>
  <% if params.dig(:search, :query).blank? %>
    <div class='col-md-12'>
      <div class="text-white">
        <div class='container'>
          <h1 class="display-4">Getting Started</h1>
          <p class="lead">Get started by typing in the name of the TV show or movie.</p>
        </div>
      </div>
    </div>
  <% elsif search_service.results.none? %>
    <div class='col-md-12'>
      <div class="text-white">
        <div class='container'>
          <h1 class="display-4">No Results Found For <%= params.dig(:search, :query) %></h1>
          <p class="lead">Try typing a different movie name</p>
        </div>
      </div>
    </div>
  <% else %>
    <%= render partial: 'video', collection: search_service.results %>
    <%= render 'next_page' %>
  <% end %>
<% end %>
