<div class='row'>
  <% @season.episodes.each do |episode| %>
    <div class="card mb-3 col-md-6 text-white bg-dark col-md-6">
      <div class="row no-gutters">
        <div class="col-md-4"><%= imdb_image_tag episode.still_path %></div>

        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= episode.name %>
            </h5>
            <%= link_to 'Select', root_path, method: :patch, class: 'btn btn-outline-primary' %>
            <p class="card-text"><%= episode.overview %></p>
            <p class="card-text">
              <small class="text-muted">
                <%= episode.air_date  %>
                <%= link_to_movie_db_episode(@season.tv.the_movie_db_id, @season.season_number, episode.episode_number) %>
              </small>
            </p>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
