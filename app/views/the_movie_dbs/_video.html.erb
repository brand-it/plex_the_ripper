<div class="width-225 m-1">
  <%= link_to (video.is_a?(Tv) ? tv_path("tmdb:#{video.the_movie_db_id
  }") : movie_path("tmdb:#{video.the_movie_db_id}")), class: 'btn img-poster-btn p-1 mb-2', data: { turbo: false, disable_with: 'Loading...' } do %>
    <%= imdb_image_tag video.poster_path, klass: 'img-poster', width: 200 %>
  <% end %>

  <h6 class="card-title height-60">
    <%= video.is_a?(Tv) ? icon('tv', type: 'fas') : icon('film', type: 'fas') %>
    <% text = video.release_or_air_date ? "#{video.title} (#{video.release_or_air_date.year})" : video.title %>
    <% if video.is_a?(Tv) %>
      <%= link_to_movie_db_tv video.the_movie_db_id, text: %>
    <% else %>
      <%= link_to_movie_db_movie video.the_movie_db_id, text: %>
    <% end %>
  </h6>
</div>
