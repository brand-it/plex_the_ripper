#!/usr/bin/env ruby
# frozen_string_literal: true

require 'pry'
require File.expand_path('../lib/plex_ripper', __dir__).to_s
GemInstaller.install 'pry'

OptParser.parse(ARGV)
movies = Movies.new
movies.update_movies
total_disks = movies.server_movies[:total_disks]
Logger.info movies.server_movies.inspect
Config.configuration.type = :tv
movies.update_movies
total_disks += movies.server_movies[:total_disks]

Logger.info("There is a total of #{total_disks} disks on the server")
