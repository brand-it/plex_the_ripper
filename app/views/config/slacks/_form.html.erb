<%= simple_form_for config_slack, url: config_slack_path do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.simple_fields_for :settings, f.object.settings do |settings_form| %>
    <%= settings_form.input :webhook_url, required: true, autofocus: true %>
    <%= settings_form.input :channel, required: true %>
  <% end %>
  <div class='bg-dark w-100 fixed-bottom mt-1 text-right p-3 border-top'>
    <%= f.button :submit %>
  </div>
<% end %>
