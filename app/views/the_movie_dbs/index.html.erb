<%= render 'search' %>
<div class='row'>
  <% if @videos.blank? %>
    <div class='col-md-12'>
      <div class="jumbotron jumbotron-fluid rounded">
        <div class='container'>
          <h1 class="display-4">Getting Started</h1>
          <p class="lead">Get started by typing in the name of the TV show or movie.</p>
        </div>
      </div>
    </div>
  <% end %>
  <% @videos.each do |video| %>
    <div class="card col-6 text-white bg-dark p-0">
      <div class="row no-gutters">
        <div class="col-4 mb-3">
          <%= imdb_image_tag video.poster_path %>
          <%= link_to 'Select', video, class: 'btn btn-outline-light w-100 rounded-0' %>
        </div>
        <div class="col-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= video.is_a?(Tv) ? icon('tv', type: 'fas') : icon('film', type: 'fas') %>
              <%= video.title %>
            </h5>
            <small class='text-muted'><%= video.original_title %></small>
            <p class="card-text"><%= video.overview %></p>
            <p class="card-text">
              <small class="text-muted">
                <%= video.release_or_air_date %>
                <% if video.is_a?(Tv) %>
                  <%= link_to_movie_db_tv video.the_movie_db_id %>
                <% else %>
                  <%= link_to_movie_db_movie video.the_movie_db_id %>
                <% end %>
              </small>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
