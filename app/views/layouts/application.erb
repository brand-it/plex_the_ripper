<!DOCTYPE html>

<html lang='en' class='<%= light_dark_mode %>'>
  <head>
    <title>Plex The Ripper</title>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <div class="d-flex w-100 h-100 p-3 mx-auto flex-column">
      <%= bootstrap_alerts %>

      <main role="main" class="inner cover mb-auto">
        <div class='row'>
          <div class='col-12'>
            <div id='progress-bar'>
              <%= render ProgressBarComponent.new(label: Disk.model_name.name) %>
            </div>
            <%#= render DiskCardComponent.new(disks: disks) %>
            <%#= render VideoProgressComponent.new(video: Movie.first) %>
          </div>
        </div>
        <div class='row'>
          <div class='col-12'>
            <%= yield %>
          </div>
        </div>
      </main>

      <footer class="mastfoot mt-auto">
        <%= render 'layouts/header' %>
        <div class="inner">
        </div>
      </footer>
    </div>
  </body>
</html>
