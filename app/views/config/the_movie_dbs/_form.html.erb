<%= simple_form_for config_the_movie_db do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.simple_fields_for :settings, f.object.settings do |settings_form| %>
    <%= settings_form.input :api_key, autofocus: true, required: true, hint: 'https://www.themoviedb.org/settings/api' %>
  <% end %>
  <%= f.button :submit %>
<% end %>
